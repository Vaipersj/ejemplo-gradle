pipeline {
    agent any
    environment {
        NEXUS_USER         = credentials('NEXUS_USER')
        NEXUS_PASSWORD     = credentials('NEXUS_PASS')
        GIT_REPO_NAME      = GIT_URL.replaceFirst(/^.*\/([^\/]+?).git$/, '$1')
    }
    parameters {
        choice(
            name:'compileTool',
            choices: ['Maven', 'Gradle'],
            description: 'Seleccione herramienta de compilacion'
        )
    }
    stages {
        stage("Pipeline"){
            steps {
                script{
                    sh "env"
                  switch(params.compileTool)
                    {
                        case 'Maven':
                            def ejecucion = load 'maven.groovy'
                            ejecucion.call()
                        break;
                        case 'Gradle':
                            def ejecucion = load 'gradle.groovy'
                            String[] str
                            str        = GIT_BRANCH.split('/')

                            if (GIT_BRANCH == '~ /maven.' ) {
                                sh "echo 'rama feature'"
                            }
                             else {
                                    sh "echo 'rama' ${env.GIT_BRANCH} "
                                    sh "echo 'rama 2' ${str[0]} "
                            }
                            ejecucion.call()
                        break;
                    }
                }
            }
            post{
                success{
                    slackSend color: 'good', message: "[Su Nombre] [${JOB_NAME}] [${BUILD_TAG}] Ejecucion Exitosa", teamDomain: 'dipdevopsusac-tr94431', tokenCredentialId: 'token-slack'
                }
                failure{
                    slackSend color: 'danger', message: "[Su Nombre] [${env.JOB_NAME}] [${BUILD_TAG}] Ejecucion fallida en stage [${env.TAREA}]" , teamDomain: 'dipdevopsusac-tr94431', tokenCredentialId: 'token-slack'
                }
            }
        }
    }
}
        